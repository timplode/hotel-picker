{
  "kind": "collectionType",
  "collectionName": "conferences",
  "info": {
    "singularName": "conference",
    "pluralName": "conferences",
    "displayName": "Conference"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "longName": {
      "type": "string"
    },
    "logo": {
      "type": "media",
      "multiple": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "defaultArrivalDate": {
      "type": "date",
      "required": true
    },
    "defaultDepartureDate": {
      "type": "date"
    },
    "earliestArrivalDate": {
      "type": "date",
      "required": true
    },
    "allowLogins": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "conference_groups": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::conference-group.conference-group",
      "mappedBy": "conference"
    },
    "passcode": {
      "type": "string"
    },
    "user_segments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::user-segment.user-segment",
      "mappedBy": "conference"
    }
  }
}
